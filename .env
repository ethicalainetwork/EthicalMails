# SMTP Server Configuration
HOSTNAME=mail.datas.world
DOMAIN=datas.world
PORT=465

# Security
USE_TLS=true
TLS_CERT_FILE=datas.world.crt
TLS_KEY_FILE=datas.world.key

# Authentication
REQUIRE_AUTH=true
AUTH_USERNAME=admin@datas.world
AUTH_PASSWORD=your_secure_password

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/smtp_server.log

# Mail handling
MAX_MESSAGE_SIZE=10485760  # 10 MB
RELAY_DOMAINS=datas.world

# Anti-spam (basic)
MAX_RECIPIENTS=50
BLACKLISTED_IPS=

# Performance
MAX_CONNECTIONS=100
TIMEOUT=60
